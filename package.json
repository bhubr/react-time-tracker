{
  "name": "node-react-timetracker-monorepo",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Benoit Hubert <benoithubert@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "lerna run lint --stream",
    "start:dev": "lerna run start:dev --stream",
    "start": "cd packages/back && yarn start",
    "build": "lerna run build --stream",
    "postinstall": "cd packages/nest-back && yarn --production=false && cd ../front && yarn --production=false && cd ../.. && yarn build"
  },
  "devDependencies": {
    "husky": "^3.0.4",
    "lerna": "^3.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lerna run --concurrency 1 --stream precommit"
    }
  },
  "engines": {
    "yarn": "^1.21.1",
    "node": "^10.16.3"
  }
}
